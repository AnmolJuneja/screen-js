{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noStrictGenericChecks": true, // https://github.com/ReactiveX/rxjs/issues/2705
    "target": "es5",
    "typeRoots": [
      "node_modules/@types", 
      "typings/custom"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
